
    <div class="container">
      <div class="row">
        <div class="col-md-12">
            {{#each viewData.student}}
            <h2> {{firstName}} {{lastName}} - Student: {{studentID}}</h2>
            <div class="col-md-12">
                <form method="post" action="/student/update">
        
                    <fieldset>
                        <legend>Student Information</legend>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="firstName">First Name:</label>
                                    <input class="form-control" id="firstName" name="firstName" type="text" value="{{firstName}}"/>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="last_name">Last Name:</label>
                                    <input class="form-control" id="lastName" name="lastName" type="text" value="{{lastName}}"/>
                                </div>
                            </div>
                                    <input class="form-control" id="studentID" name="studentID" type="hidden" value="{{studentID}}" />
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email">Email:</label>
                                    <input class="form-control" id="email" name="email" type="email" value="{{email}}"/>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="phone">Phone:</label>
                                    <input class="form-control" id="phone" name="phone" type="text"  value="{{phone}}"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="addressStreet">Address (Street):</label>
                                    <input class="form-control" id="addressStreet" name="addressStreet" type="text" value="{{addressStreet}}" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label for="addressCity">Address (City):</label>
                                <input class="form-control" id="addressCity" name="addressCity" type="text"  value="{{addressCity}}"/>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="addressState">Address (State):</label>
                                    <input class="form-control" id="addressState" name="addressState" type="text" value="{{addressState}}" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="addressPostal">Address (Zip Code):</label>
                                    <input class="form-control" id="addressPostal" name="addressPostal" type="text" value="{{addressPostal}}"/>
                                </div>
                            </div>
                        </div>
                    {{/each}}
        
                    <!-- </fieldset>
        
                    <fieldset> -->
                        <!-- <legend>Company Information</legend> -->
                        <div class="row">
                            <div class="col-md-3">
                                {{#each viewData.student}}
                                <div class="form-group">
                                    <label>Status:</label><br />
                                    <label  class="checkbox-inline">
                                        <input type="radio" id="statusFT" name="status" value="Full Time" {{#equal status "Full Time"}}checked{{/equal}}/> Full Time
                                    </label>
                                    <label class="checkbox-inline">
                                        <input type="radio" id="statusFT" name="status" value="Part Time" {{#equal status "Part Time"}}checked{{/equal}}/> Part Time
                                    </label>
                                </div>
                                {{/each}}
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="programCode">Program:</label>
                                    {{#if viewData.programs}}
                                        <select class="form-control" name="program" id="program">
                                            <option value="">Select Program</option>
                                    {{#each viewData.programs}}
                                            <option value="{{programCode}}" {{#equal ../viewData.student.[0].program programCode}} selected {{/equal}} > {{programCode}} - {{programName}} </option>
                                        {{/each}}
                                        </select>
                                    {{else}}
                                        <div>No Programs</div>
                                    {{/if}}
                                </div>
                            </div>
                            {{#each viewData.student}}
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="isInternationalStudent">International Student?</label>
                                    <input class="form-control" type="checkbox" name="isInternationalStudent" {{#if isInternationalStudent}}checked{{/if}} />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="credential">Expected Credential:</label>
                                    <input class="form-control" id="credential" name="credential" type="text" value="{{ expectedCredential}}"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="registrationDate">Registration Date:</label>
                                    <input class="form-control" id="registrationDate" name="registrationDate" type="text" value="{{registrationDate }}" readonly />
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </fieldset>
        
                    <hr />
        
                    <input type="submit" class="btn btn-primary pull-right" value="Update Student" /><br /><br /><br />
        
                </form>
            </div>
      </div>
    </div>

